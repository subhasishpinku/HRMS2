<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="5sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/card_view_shape">

        <RelativeLayout
            android:id="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_marginLeft="10sp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_date_range_black_24dp"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/dateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/imageView"
                    android:textStyle="bold"
                    android:text="31/10/2018"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/red" />
                <TextView
                    android:id="@+id/dayID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/imageView"
                    android:textStyle="bold"
                    android:text="(Wednesday)"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/red" />
            </LinearLayout>

            <View
                android:layout_below="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blackk" />
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeId"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imageView"
                    android:textSize="15sp"
                    android:text="Amount :"
                    android:textStyle="bold"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/red" />

                <ImageView
                    android:id="@+id/odtypeId"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/rupeee"
                    android:text="Job"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/amountID"
                    android:text="500.00"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginTop="7sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:id="@+id/rejID"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10sp"
                    android:layout_toRightOf="@id/amountID"
                    android:textSize="15sp"
                    android:text="Rejected"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="5sp"
                    android:textColor="@color/red" />
            </LinearLayout>
            <View
                android:layout_below="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:background="@color/blackk" />
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_below="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                >
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textStyle="bold"-->
                    <!--android:layout_marginTop="5sp"-->
                    <!--android:textColor="@color/red"-->
                    <!--android:text="STATUS :"/>-->
                <!--<ImageView-->
                    <!--android:id="@+id/checkID"-->
                    <!--android:text="Job"-->
                    <!--android:layout_marginTop="5sp"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:textColor="#000000"-->
                    <!--android:textSize="15sp"-->
                    <!--android:background="@drawable/ic_check_black_24dp"-->
                    <!--android:layout_width="20sp"-->
                    <!--android:layout_height="20sp" />-->

                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2sp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:background="@drawable/linerridues"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/rmID"
                        android:layout_centerVertical="true"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:background="@drawable/ic_check_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"/>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="RM"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/linerridues"
                    android:layout_marginRight="2sp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:layout_height="30dp">
                    <ImageView
                        android:id="@+id/accID"
                        android:layout_centerVertical="true"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:background="@drawable/ic_close_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:layout_marginRight="0dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="ACNT" />

                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2sp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:layout_height="30dp">

                    <Button
                        android:id="@+id/viewID"
                        android:layout_width="80dp"
                        android:layout_height="29dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/squareborder"
                        android:gravity="center"
                        android:text="VIEW"
                        android:textColor="@color/white"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />
                    <Button
                        android:id="@+id/viewID1"
                        android:layout_width="80dp"
                        android:layout_height="29dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/squareborder"
                        android:gravity="center"
                        android:text="VIEW"
                        android:textColor="@color/white"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />


                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_below="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:background="@color/blackk" />
            <LinearLayout
                android:layout_marginLeft="5sp"
                android:id="@+id/linearLayout4"
                android:layout_below="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvpurID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:text="Travelling Allowance Purpose"/>
            </LinearLayout>
            <View
                android:layout_below="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5sp"
                android:background="@color/blackk" />
            <LinearLayout
                android:layout_marginLeft="5sp"
                android:id="@+id/linearLayout5"
                android:layout_below="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="130dp"
                android:orientation="vertical">

                <TextView
                android:id="@+id/purposrId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/timeId"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:justificationMode="inter_word"
                android:layout_toRightOf="@id/imageView"
                android:text="PURPOSE"
                android:textColor="#000000" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>