<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redborder"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvId"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="ASCENSIVE EDUCARE PVT. LTD"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle
                            ="italic"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp">

                    <RelativeLayout
                        android:id="@+id/lv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lv1"
                        android:layout_marginLeft="5sp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/profileId"
                                android:layout_width="120sp"
                                android:layout_height="80sp"
                                android:layout_gravity="center"
                                android:src="@drawable/saikatgupta" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/linearLayout1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/usernameID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textColor="@color/red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5sp"
                                android:layout_marginRight="5sp"
                                android:text="/"
                                android:textStyle="bold"
                                android:textColor="@color/red" />

                            <TextView
                                android:id="@+id/empID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A0012"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textColor="@color/red" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_marginTop="25sp"
                            android:layout_toEndOf="@+id/linearLayout1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/empbranchID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Corporate Office"
                                android:textColor="@color/red" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_below="@+id/linearLayout3"
                            android:layout_marginTop="45sp"
                            android:layout_toEndOf="@+id/linearLayout1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/empdesinID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Assistant General Manager - Learning &amp; Development"
                                android:textColor="@color/red" />
                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/lv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scId"
        android:fillViewport="true">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="5sp"
                android:id="@+id/lvv2"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardviewprofile"
                    android:layout_width="107dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.50"
                    card_view:cardCornerRadius="4dp">
                    <ImageView
                        android:layout_marginBottom="15sp"
                        android:id="@+id/obattId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/map" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100sp"
                        android:gravity="center"
                        android:text="MY LOCATION"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "/>
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardviewplaning"
                    android:layout_width="107dp"
                    android:layout_height="140dp"
                    android:layout_weight="2.50"
                    android:layout_gravity="right"
                    card_view:cardCornerRadius="4dp"
                    >

                    <ImageView
                        android:layout_marginBottom="15sp"
                        android:id="@+id/odlogId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/odlog" />
                    <TextView

                        android:layout_marginTop="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="OD LOG"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lvv3"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/lvv2"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                >
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardviewapprove"
                    android:layout_width="107dp"
                    android:layout_height="140dp"
                    android:layout_weight="2.50"

                    android:layout_gravity="center"
                    card_view:cardCornerRadius="4dp">
                    <ImageView
                        android:layout_marginBottom="15sp"
                        android:id="@+id/odapproveId"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/odstatus"
                        />
                    <TextView

                        android:layout_marginTop="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="OD APPROVE"/>

                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "/>
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cardviewattendence"
                    android:layout_width="107dp"
                    android:layout_height="140dp"
                    android:layout_weight="2.50"
                    android:layout_gravity="right"

                    card_view:cardCornerRadius="4dp"
                    >

                    <ImageView
                        android:layout_marginBottom="15sp"
                        android:id="@+id/dallyattviewId"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/dallyattn"
                        />
                    <TextView
                        android:layout_marginTop="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="DALLY ATTNDENCE"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
             <LinearLayout
                android:layout_marginTop="10sp"
                android:id="@+id/lvv4"
                android:layout_below="@+id/lvv3"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                 >
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                   android:id="@+id/cardviewtaentry"
                    android:layout_width="107dp"
                    android:layout_height="140dp"
                    android:layout_weight="2.50"
                    android:layout_gravity="center"
                    card_view:cardCornerRadius="4dp">
                    <ImageView
                        android:layout_marginBottom="15sp"
                        android:id="@+id/taentryId"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/taentry"/>
                    <TextView
                        android:layout_marginTop="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="TA ENTRY"/>

                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "/>
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="107dp"
                    android:layout_height="140dp"
                    android:layout_weight="2.50"
                    android:layout_gravity="right"
                    card_view:cardCornerRadius="4dp"
                    >
                    <ImageView
                        android:layout_marginBottom="15sp"
                        android:id="@+id/logoutId"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/logout"
                        />
                    <TextView
                        android:layout_marginTop="100sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="LOG OUT"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>
             <LinearLayout
                 android:layout_marginTop="10sp"
                 android:id="@+id/lvv5"
                 android:layout_below="@+id/lvv4"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:weightSum="5"
                 android:layout_marginBottom="40sp"
                 >
                 <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                     android:id="@+id/hrmswebID"
                     android:layout_width="match_parent"
                     android:layout_height="140dp"
                     android:layout_weight="2.50"
                     android:layout_gravity="center"
                     card_view:cardCornerRadius="4dp">
                     <ImageView
                         android:layout_marginBottom="15sp"
                         android:layout_gravity="center"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:background="@drawable/worldwide"/>
                     <TextView
                         android:layout_marginTop="100sp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:textSize="13sp"
                         android:gravity="center"
                         android:textStyle="bold"
                         android:textColor="@color/black"
                         android:text="LOGIN FOR ONLINE HRMS SOLUTION"/>
                 </android.support.v7.widget.CardView>

             </LinearLayout>
         </LinearLayout>
    </ScrollView>
<!--        <android.support.design.widget.FloatingActionButton-->
<!--            android:id="@+id/fab"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="end|bottom"-->
<!--            app:backgroundTint="@color/red"-->
<!--            android:layout_margin="50dp"-->
<!--            android:src="@drawable/ic_autorenew_black_24dp" />-->
    </android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:id="@+id/llv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="center|bottom"
        >

        <Button
            android:id="@+id/start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/three_d"
            android:text="OD IN"/>

        <Button
            android:id="@+id/end_time"
            android:layout_width="0dp"
            android:layout_marginLeft="5sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/three_d"
            android:text="OD OUT"/>

        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_marginLeft="5sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/three_d"
            android:text="SYNC"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="center|bottom">
        <Button
            android:id="@+id/startjobId"
            android:layout_width="0dp"
            android:layout_marginLeft="5sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/three_d"
            android:text="START"/>
    </LinearLayout>
</RelativeLayout>
