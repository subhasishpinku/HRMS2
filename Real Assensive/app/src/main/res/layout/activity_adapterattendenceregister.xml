<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/card_view_shape">

        <RelativeLayout
            android:id="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:gravity="center"
                android:layout_marginRight="5sp"
                android:layout_marginLeft="5sp"
                android:background="@drawable/linerridues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_marginLeft="10sp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_date_range_black_24dp"
                    android:padding="4dp" />
                <TextView
                    android:id="@+id/dateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/imageView"
                    android:textStyle="bold"
                    android:text="31/10/2018"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/red" />
                <TextView
                    android:id="@+id/dayID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/imageView"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:text="(Wednesday)"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10sp"
                android:id="@+id/lvID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TableRow
                    android:id="@+id/tr_header"
                    android:background="@drawable/table_row_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/table_cell_bg"
                    android:gravity="center"
                    android:text="IN TIME"/>
                <TextView
                    android:layout_weight="1"
                    android:text="OUT TIME"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_cell_bg"
                    />
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lvID1"
                android:layout_marginLeft="10sp"
                android:layout_below="@+id/lvID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TableRow
                    android:id="@+id/tr_header1"
                    android:background="@drawable/table_row_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/InID"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/table_cell_bg"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:text="10:30 AM"
                        android:textSize="15sp"
                        />
                <TextView
                   android:id="@+id/outID"
                    android:layout_weight="1"
                    android:text="07:30 PM"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:background="@drawable/table_cell_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
                </TableRow>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lvID3"
                android:layout_below="@+id/lvID1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/branchID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/table_cell_bg"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="10:30 AM"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/remarksID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="F U L L D A Y"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:lines="1"
                    android:paddingStart="10sp"
                    android:scrollHorizontally="false" />
            </LinearLayout>
         </RelativeLayout>
    </LinearLayout>

</LinearLayout>