<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/card_view_shape">

        <RelativeLayout
            android:id="@+id/lv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lv1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lvv"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="165dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tvff"
                    android:layout_toRightOf="@+id/locIDD"
                    android:layout_weight="2"
                    android:background="@color/red" />
                <TextView
                    android:id="@+id/purposeID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:background="@drawable/linerridues"
                    android:text="PURSOSE"/>
                <View

                    android:layout_width="165dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/tvff"
                    android:layout_toRightOf="@+id/locIDD"
                    android:layout_weight="2"
                    android:background="@color/red" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lvv1"
                android:layout_marginTop="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/time"
                    android:padding="4dp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/odtypeID"
                    android:layout_marginLeft="5sp"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/odsquareborder"
                    android:gravity="center"
                    android:text="R"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/timeID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="10:30"/>
                <TextView
                    android:id="@+id/addressID"
                    android:layout_marginLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="No.323 Government Colony, Sodepur, Barrackpore, West Bengal 700114"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
