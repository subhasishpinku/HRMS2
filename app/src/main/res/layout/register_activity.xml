<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:id="@+id/coordinatorLayout"
    tools:context=".Login">
    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/simpleImageView"
            android:layout_width="fill_parent"
            android:layout_height="111dp"
            android:src="@mipmap/logo1" />
        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:text="ASCENSIVE EDUCARE PVT. LTD"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/versionId"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:gravity="center"
            android:text="1.0"
            android:textColor="#ff0000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginlv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="200sp"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTexUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user"
                android:hint="Name"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/phnoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:hint="Contact Number"
                android:maxLength="10"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/red">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/hrmsId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="10dp"
                android:hint="HRMS ID"
                android:inputType="textPassword"
                />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/registerId"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            style="@style/DefaultButton"
            android:background="@drawable/three_d"
            android:text="Register" />


    </LinearLayout>

    <ProgressBar
        android:visibility="gone"
        android:layout_marginBottom="50sp"
        android:id="@+id/progressBar"
        android:layout_width="101dp"
        android:layout_height="83dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/animation" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:gravity="center">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MANITAINED BY"
            android:textColor="@color/red"
            android:textSize="10sp"
            android:textStyle="italic" />
        <TextView
            android:layout_below="@+id/tvId"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:textStyle="italic"
            android:text="DILIGENT ITECH PRIVATE LIMITED"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>