<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rvID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/redborder"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvId"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="TRAVELLING ALLOWANCE"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/homeID"
                android:layout_alignParentEnd="true"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:background="@drawable/ic_home_black_24dp" />
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_below="@+id/rvID"
            android:layout_marginTop="5sp"
            android:id="@+id/cdID"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"

                >
                <LinearLayout
                    android:id="@+id/lvID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="DATE"/>
                    <TextView
                        android:id="@+id/dateID"
                        android:layout_weight="0.30"
                        android:hint="Enter Date"
                        android:gravity="center"
                        android:layout_marginLeft="18dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linerridues"/>
                    <Button
                        android:id="@+id/dateIDD"
                        android:layout_width="match_parent"
                        android:layout_weight="0.99"
                        android:layout_height="30sp"
                        android:background="@drawable/ic_date_range_black_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvIDD"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/lvID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordercolorred">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="Enter From Location"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvID1"
                    android:layout_marginTop="10sp"
                    android:layout_below="@+id/lvIDD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/locID"
                        android:layout_marginLeft="5sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:src="@drawable/map"
                        />
                    <EditText
                        android:id="@+id/fromId"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="0.21"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:hint="Enter Your Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:paddingLeft="5sp"
                        android:background="@drawable/linerridues" />
                    <Button
                        android:visibility="gone"
                        android:id="@+id/fromIdd"
                        android:layout_width="match_parent"
                        android:layout_weight="0.99"
                        android:layout_height="30sp"
                        android:background="@drawable/ic_date_range_black_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvIDDD"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/lvID1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordercolorred">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="Enter To Location"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvID2"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/lvIDDD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/locIDD"
                        android:layout_marginLeft="5sp"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:src="@drawable/map"
                        />
                    <EditText
                        android:id="@+id/toID"
                        android:layout_weight="0.21"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:inputType="text"
                        android:textSize="15sp"
                        android:hint="Enter Your Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linerridues"/>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/toIDD"
                        android:layout_width="match_parent"
                        android:layout_weight="0.99"
                        android:layout_height="30sp"
                        android:background="@drawable/ic_date_range_black_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvID3"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/lvID2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/bordercolorred"
                        android:text="TRAVELLING ALLOWANCE PURPOSE"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginTop="5sp"
                            android:layout_marginLeft="5sp"
                            android:layout_below="@+id/locID"
                            android:layout_width="35sp"
                            android:layout_height="35sp"
                            android:src="@drawable/purpose"
                            />
                        <EditText
                            android:layout_marginTop="5sp"
                            android:id="@+id/purposeID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:background="@drawable/linerridues"
                            android:gravity="top|center"
                            android:inputType="textMultiLine"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:hint="Enter Your Text"
                            android:lines="3"
                            android:paddingStart="10sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:scrollHorizontally="false" />


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvID4"
                    android:layout_below="@+id/lvID3"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:background="@drawable/bordercolorred"
                        android:text="PLACE OF VISIT"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="5sp"
                        android:layout_below="@+id/locID"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:src="@drawable/purpose"
                        />
                    <EditText
                        android:layout_marginTop="5sp"
                        android:id="@+id/visitplaceId"
                        android:layout_marginLeft="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linerridues"
                        android:gravity="top|center"
                        android:inputType="textMultiLine"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:hint="Enter Your Text"
                        android:lines="3"
                        android:paddingStart="10sp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:scrollHorizontally="false" />
                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lvID5"
                    android:layout_below="@+id/lvID4"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:background="@drawable/bordercolorred"
                        android:text="MODE"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lvID6"
                    android:layout_below="@+id/lvID5"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="5sp"
                        android:layout_below="@+id/locID"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:src="@drawable/bus"
                        />
                    <EditText
                        android:id="@+id/modeID"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:hint="Enter Your Text"
                        android:gravity="center"
                        android:inputType="text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linerridues"/>
                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lvID7"
                    android:layout_below="@+id/lvID6"
                    android:layout_marginTop="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:background="@drawable/bordercolorred"
                        android:text="AMOUNT"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvID8"
                    android:layout_below="@+id/lvID7"
                    android:paddingBottom="30sp"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/odtypeId"
                        android:text="Job"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:background="@drawable/rupeee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/amountId"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:hint="Enter Your Text"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linerridues"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lvvv9"
                    android:layout_below="@+id/lvID8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:orientation="horizontal" >
                    <!--<com.android.volley.toolbox.NetworkImageView-->
                        <!--android:id="@+id/imageView"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="180sp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:background="@drawable/taa"/>-->
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="fitCenter"
                        />
<!--                    <ImageView-->
<!--                        android:id="@+id/imageView1"-->
<!--                        android:visibility="gone"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="150dp"-->
<!--                        android:scaleType="fitCenter"-->
<!--                        />-->
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_below="@+id/lvvv9"
                    android:layout_marginBottom="80sp"
                    android:id="@+id/rcv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:scrollbars="vertical" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
  </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemBackground="@color/red"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_navigation_main" />

